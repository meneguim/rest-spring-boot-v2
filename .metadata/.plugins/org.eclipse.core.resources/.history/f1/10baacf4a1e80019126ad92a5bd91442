package br.com.erudio;

import br.com.erudio.exception.UnsupportedMathOperationException;

public class Calc {
	
	
	public static Double calc(String operationType, Double n1, Double n2) {
		validaParam (n1, n2);
		Double value = 0D;
		if (operationType.toUpperCase().equals("SUM")) {
			value = sumCalc(n2, n2);
		}
		return value;
	}
	
	private static void validaParam (Double n1, Double n2) {
		if (n1 == null || n2 == null) {
			throw new UnsupportedMathOperationException("O primeiro e segundo numero devem ser especificados"); 
		}
	}
	
	private static Double sumCalc(Double n1, Double n2) {
		return n1 + n2;
	}
	
	
}
