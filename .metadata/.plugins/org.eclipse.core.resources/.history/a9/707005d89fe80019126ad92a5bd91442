package br.com.erudio;

import br.com.erudio.exception.UnsupportedMathOperationException;

public class Calc {
	
	private static void validaParam (Double n1, Double n2) {
		if (n1 == null || n2 == null) {
			throw new UnsupportedMathOperationException("O primeiro e segundo numero devem ser especificados"); 
		}
	}
	
	public static Double sum (Double n1, Double n2) {
		validaParam (n1, n2);
		return n1 + n2;
	}
	
	public static Double subtraction (Double n1, Double n2) {
		validaParam (n1, n2);
		return n1 - n2;
	}
	
}
